{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [ "es2018" ],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strict": false,
    "allowJs": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/lib/",
    "src/templates/",
    "src/test/",
    "src/typings/"
  ]
}